@page "{id}"
@model CarMarketplace.Pages.Application.SuitableCarsModel
@{
    ViewData["Title"] = "Подходящие автомобили";
}

<h1 class="display-6 mb-3">Подходящие автомобили</h1>
<div class="container">
    @if (!Model.AdsViewModel.Any())
    {
        <p class="lead">Подходящих автомобилей не найдено</p>
    }
    @foreach (var adViewModel in Model.AdsViewModel)
    {
        <div class="row justify-content-center">
            <div class="card row my-2 bg-light" style="max-width: 540px;">
                <a class="text-dark nav-link" asp-route-id="@adViewModel.ID" asp-page="Advertisement">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img />
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@adViewModel.Title</h5>
                                <p class="card-text">@adViewModel.Price</p>
                                <p class="card-text">
                                    <small class="text-muted">@adViewModel.InsertationDate.ToString("g")</small>
                                </p>
                            </div>
                        </div>
                    </div>
                </a>                           
            </div>
        </div>
    }
</div>
