@page
@model IndexModel
@{
    ViewData["Title"] = "Главная";
    ViewData["UserName"] = "Вход/Регистрация";
}

<div class="accordion" id="accordionFilter">
    <div class="accordion-item">
        <h2 class="accordion-header" id="heading"> 
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFilter" area-expanded="true" area-controls="collapseFilter">
                Фильтр
            </button>
        </h2>
        <div id="collapseFilter" class="accordion-collapse collapse show" area-labelledby="heading" data-bs-parent="accordionFilter">
            <div class="accordion-body">
                Здесь будет фильтр
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="card col my-2 bg-light" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">Заголовок объявления</h5>
                        <p class="card-text">Цена</p>
                        <p class="card-text"><small class="text-muted">Дата публикации</small></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>